<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/marginLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/gris"
        android:layout_width="30dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/suscripcion_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/ralewaybold"
        android:text="SUSCRIPCIÓN"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marginLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plan_dias_prueba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/ralewaysemibold"
        android:text="Días Prueba"
        android:textSize="@dimen/font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marginLeft"
        app:layout_constraintTop_toBottomOf="@+id/suscripcion_titulo" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/tv_plan_dias_gratis"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/suscripcion_dias_pruebas"
        android:textColor="@color/grisSusc"
        android:textSize="@dimen/font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marginLeft"
        app:layout_constraintTop_toBottomOf="@+id/plan_dias_prueba" />

    <TextView
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_plan_dias_gratis"
        app:layout_constraintStart_toEndOf="@+id/marginLeft"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_dias_prueba"
        android:text="Sesiones gratis: "
        android:fontFamily="@font/ralewaymedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_dias_gratis"
        android:layout_width="180dp"
        android:layout_marginTop="16dp"
        android:layout_height="@dimen/buttons_height"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_button"
        android:fontFamily="@font/ralewaymedium"
        android:text="ACTIVAR"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marginLeft"
        app:layout_constraintTop_toBottomOf="@+id/tv_dias_prueba" />

</android.support.constraint.ConstraintLayout>