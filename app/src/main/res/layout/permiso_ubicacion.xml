<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/cornered_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/cornered_bg"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="165dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/permission_cerrar"
            android:src="@drawable/ic_close"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        </LinearLayout>

        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="17dp"
            android:fontFamily="@font/ralewaybold"
            android:layout_centerHorizontal="true"
            android:text='Permisos'
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Tu ubicación actual se mostrará y se usará para la navegación, indicaciones y los resultados de búsqueda."
            android:layout_centerInParent="true"
            android:layout_width="170dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <Button
                android:id="@+id/permission_no_permitir"
                android:textSize="14dp"
                android:background="@drawable/custom_button_dialog"
                android:text="Cancelar"
                android:textColor="@color/azul"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/permission_permitir"
                android:textSize="14dp"
                android:background="@drawable/custom_button_dialog"
                android:text="Continuar"
                android:textColor="@color/azul"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
