<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SuscripcionMensual">

    <View
        android:id="@+id/marginLeft"
        android:layout_below="@+id/toolbar"
        android:background="@color/gris"
        android:layout_width="30dp"
        android:layout_height="match_parent">
    </View>

    <ScrollView
        android:overScrollMode="never"
        android:layout_toRightOf="@+id/marginLeft"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/app_toolbar_h"
            android:layout_width="@dimen/suscripcion_mensual_w"
            android:layout_height="match_parent"
            android:paddingTop="80dp">

            <TextView
                android:text="EVALÚANOS"
                android:textSize="22sp"
                android:textAlignment="center"
                android:fontFamily="@font/ralewaybold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/font_size"
                android:text="¡ESPERAMOS QUE HAYAS TENIDO UNA EXCELENTE VISITA!"
                android:layout_marginTop="@dimen/fragment_evaluar_tv_mt"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/rb_club_calificacion"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/fragment_evaluar_tv_mt"
                android:orientation="horizontal"
                android:layout_width="200dp"
                android:layout_height="30dp">


                <ImageView
                    android:id="@+id/star1"
                    android:layout_toRightOf="@+id/rb_calificacion"
                    android:src="@drawable/star_off"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/star2"
                    android:layout_toRightOf="@+id/rb_calificacion"
                    android:src="@drawable/star_off"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/star3"
                    android:layout_toRightOf="@+id/rb_calificacion"
                    android:src="@drawable/star_off"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/star4"
                    android:layout_toRightOf="@+id/rb_calificacion"
                    android:src="@drawable/star_off"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/star5"
                    android:layout_toRightOf="@+id/rb_calificacion"
                    android:src="@drawable/star_off"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_enviar_evaluacion"
                android:background="@drawable/circle_button"
                android:text="ENVIAR"
                android:fontFamily="@font/ralewaymedium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/fragment_evaluar_tv_mt"
                android:layout_width="150dp"
                android:layout_height="@dimen/buttons_height" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>