<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Favoritos">

    <View
        android:id="@+id/marginLeft"
        android:layout_below="@+id/toolbar"
        android:background="@color/gris"
        android:layout_width="30dp"
        android:layout_height="match_parent">
    </View>
    <ScrollView
        android:overScrollMode="never"
        android:layout_toRightOf="@+id/marginLeft"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/app_toolbar_h"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/favoritos_titulo"
                android:text="FAVORITOS"
                android:fontFamily="@font/ralewaybold"
                android:textSize="@dimen/app_titles_ts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_sucursales"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/favoritos_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>



        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_sin_sucursales"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/marginLeft"
        android:textSize="@dimen/font_size"
        android:gravity="center_horizontal"
        android:text="Sin sucursales favoritas seleccionadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>