    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar_h">

        <ImageView
            android:onClick="atras"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_boton_regresar" />

        <ImageView
            android:src="@drawable/logo_fitory_bco"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/toolbar_logo_w"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/marginLeft"
        android:layout_below="@+id/toolbar"
        android:background="@color/gris"
        android:layout_width="@dimen/app_gray_ml_w"
        android:layout_height="match_parent">
    </View>
    <ScrollView
        android:overScrollMode="never"
        android:layout_toRightOf="@+id/marginLeft"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

