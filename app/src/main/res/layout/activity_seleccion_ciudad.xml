                android:textSize="24sp"
                android:fontFamily="@font/ralewaybold"
                android:text="@string/cual_es_tu_ciudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:fontFamily="@font/ralewaymedium"
                android:layout_marginLeft="@dimen/ciudad_subtitulo_ml"
                android:text="@string/selecciona_ciudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="@dimen/ciudad_pais_mt"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="@dimen/ciudad_pais_w"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/ralewaysemibold"
                    android:text="Estado"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_border_gray"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                    <Spinner
                        android:spinnerMode="dropdown"
                        android:id="@+id/spinner_estados"
                        android:backgroundTint="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"></Spinner>

                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_ciudad"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
