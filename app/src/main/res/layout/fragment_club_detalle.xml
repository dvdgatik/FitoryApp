<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ClubDetalle">


    <View
        android:id="@+id/marginLeft"
        android:layout_below="@+id/toolbar"
        android:background="@color/gris"
        android:layout_width="@dimen/app_gray_ml_w"
        android:layout_height="match_parent">
    </View>
    <ScrollView
        android:overScrollMode="never"
        android:layout_toRightOf="@+id/marginLeft"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/club_detalle_w"
            android:layout_height="match_parent"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/iv_logo"
                android:scaleType="fitXY"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tv_club_nombre"
                android:text=""
                android:layout_toLeftOf="@id/iv_icono_favoritos"
                android:layout_toRightOf="@id/iv_logo"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/fragment_club_detalle_nombre"
                android:fontFamily="@font/ralewaybold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/rb_club_calificacion"
                android:layout_below="@+id/tv_club_nombre"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="180dp"
                android:layout_height="20dp">


                <ImageView
                    android:id="@+id/star1"
                    android:layout_toRightOf="@+id/rb_calificacion"
                    android:src="@drawable/star_off"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_toRightOf="@+id/rb_calificacion"
                    android:src="@drawable/star_off"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_toRightOf="@+id/rb_calificacion"
                    android:src="@drawable/star_off"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/star4"
                    android:layout_toRightOf="@+id/rb_calificacion"
                    android:src="@drawable/star_off"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/star5"
                    android:layout_toRightOf="@+id/rb_calificacion"
                    android:src="@drawable/star_off"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <!--<RatingBar-->
                <!--android:id="@+id/rb_club_calificacion"-->
                <!--android:layout_below="@+id/tv_club_nombre"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:theme="@style/RatingStar"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:rating="5"-->
                <!--android:layout_height="wrap_content" />-->

            <ImageView
                android:visibility="gone"
                android:layout_toLeftOf="@id/iv_icono_favoritos"
                android:id="@+id/iv_icono_compartir"
                android:layout_marginTop="5dp"
                android:src="@drawable/icono_compartir_inactivo"
                android:layout_marginRight="3dp"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/tv_favorito_id"
                android:text="0"
                android:visibility="invisible"
                android:layout_above="@+id/tv_favorito_value"
                android:layout_toLeftOf="@+id/iv_icono_compartir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_favorito_value"
                android:text="false"
                android:visibility="invisible"
                android:layout_above="@+id/iv_icono_favoritos"
                android:layout_toLeftOf="@+id/iv_icono_compartir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/iv_icono_favoritos"
                android:layout_marginTop="5dp"
                android:src="@drawable/icono_favoritos_inactivo"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <!--<ImageSwitcher-->
                <!--android:id="@+id/iv_club_foto"-->
                <!--android:background="@android:color/darker_gray"-->
                <!--android:scaleType="fitXY"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_below="@id/rb_club_calificacion"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="170dp"></ImageSwitcher>-->

            <android.support.v4.view.ViewPager
                android:id="@+id/iv_club_foto"
                android:background="@android:color/darker_gray"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_below="@id/rb_club_calificacion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_club_detalle_viewpager_h"></android.support.v4.view.ViewPager>

            <View
                android:id="@+id/disable_view_pager"
                android:layout_marginTop="10dp"
                android:layout_below="@id/rb_club_calificacion"
                android:layout_width="match_parent"
                android:layout_height="200dp"></View>

            <LinearLayout
                android:id="@+id/precios"
                android:layout_below="@+id/iv_club_foto"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:text="Día"
                    android:textSize="10sp"
                    android:gravity="bottom|center_horizontal"
                    android:fontFamily="@font/ralewaymedium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>
                <TextView
                    android:id="@+id/tv_club_precio_dia"
                    android:text="00 MXN"
                    android:fontFamily="@font/ralewaymedium"
                    android:textSize="@dimen/fragment_club_detalle_precio_ts"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"/>
                <View
                    android:background="@android:color/holo_red_dark"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>
                <TextView
                    android:id="@+id/tv_club_precio_mes"
                    android:text="00 MXN"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/ralewaymedium"
                    android:textSize="@dimen/fragment_club_detalle_precio_ts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"/>
                <TextView
                    android:text="Mes"
                    android:textSize="10sp"
                    android:gravity="bottom|center_horizontal"
                    android:fontFamily="@font/ralewaymedium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/detalles_club"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/precios"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/expandableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ael_expanded="false"
                    app:ael_duration="500"
                    app:ael_interpolator="accelerateDecelerate"
                    app:ael_orientation="vertical">

                    <TextView
                        android:id="@+id/tv_direccion_lbl"
                        android:text="Dirección:"
                        android:textSize="@dimen/font_size"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_telefono_lbl"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/tv_como_llegar"
                        android:text="Teléfono:"
                        android:textSize="@dimen/font_size"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_correo_lbl"
                        android:layout_below="@id/tv_club_telefono"
                        android:layout_marginTop="5dp"
                        android:text="Correo:"
                        android:textSize="@dimen/font_size"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_como_llegar"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_club_direccion"
                        android:text="¿Cómo llegar aquí?"
                        android:textColor="@color/aqua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_club_direccion"
                        android:text=""
                        android:textSize="@dimen/font_size"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_toRightOf="@+id/tv_direccion_lbl"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_club_telefono"
                        android:layout_below="@id/tv_como_llegar"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/tv_telefono_lbl"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textSize="@dimen/font_size"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_club_correo"
                        android:layout_below="@id/tv_club_telefono"
                        android:layout_toRightOf="@id/tv_correo_lbl"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textSize="@dimen/font_size"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_club_info_title"
                        android:layout_below="@id/tv_club_correo"
                        android:layout_marginTop="5dp"
                        android:text="Información adicional:"
                        android:textSize="@dimen/font_size"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.uncopt.android.widget.text.justify.JustifiedTextView
                        android:id="@+id/tv_club_info"
                        android:text="..."
                        android:textSize="@dimen/font_size"
                        android:layout_below="@id/tv_club_info_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/tv_horario_lbl"
                        android:layout_below="@id/tv_club_info"
                        android:layout_marginTop="5dp"
                        android:text="Horario:"
                        android:textSize="13dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:id="@+id/ll_horario_lunes"
                        android:orientation="horizontal"
                        android:layout_below="@id/tv_horario_lbl"
                        android:layout_marginTop="5dp"
                        android:textSize="13dp"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_lunes"
                            android:text="Lunes"
                            android:textSize="13dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"/>

                        <TextView
                            android:id="@+id/tv_lunes_horario"
                            android:textSize="13dp"
                            android:layout_toRightOf="@+id/tv_lunes"
                            android:gravity="center_horizontal"
                            android:text="Cerrado"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_horario_martes"
                        android:orientation="horizontal"
                        android:layout_below="@id/ll_horario_lunes"
                        android:layout_marginTop="5dp"
                        android:textSize="13dp"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_martes"
                            android:textSize="13dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="Martes" />

                        <TextView
                            android:id="@+id/tv_martes_horario"
                            android:textSize="13dp"
                            android:layout_toRightOf="@+id/tv_lunes"
                            android:text="Cerrado"
                            android:gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_horario_miercoles"
                        android:orientation="horizontal"
                        android:layout_below="@id/ll_horario_martes"
                        android:layout_marginTop="5dp"
                        android:textSize="13dp"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_miercoles"
                            android:textSize="13dp"
                            android:text="Miércoles"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"/>

                        <TextView
                            android:id="@+id/tv_miercoles_horario"
                            android:textSize="13dp"
                            android:layout_toRightOf="@+id/tv_lunes"
                            android:text="Cerrado"
                            android:gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_horario_jueves"
                        android:textSize="13dp"
                        android:orientation="horizontal"
                        android:layout_below="@id/ll_horario_miercoles"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_jueves"
                            android:textSize="13dp"
                            android:text="Jueves"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"/>

                        <TextView
                            android:id="@+id/tv_jueves_horario"
                            android:textSize="13dp"
                            android:layout_toRightOf="@+id/tv_lunes"
                            android:text="Cerrado"
                            android:gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_horario_viernes"
                        android:orientation="horizontal"
                        android:layout_below="@id/ll_horario_jueves"
                        android:layout_marginTop="5dp"
                        android:textSize="13dp"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_viernes"
                            android:textSize="13dp"
                            android:text="Viernes"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"/>

                        <TextView
                            android:id="@+id/tv_viernes_horario"
                            android:textSize="13dp"
                            android:layout_toRightOf="@+id/tv_lunes"
                            android:text="Cerrado"
                            android:gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_horario_sabado"
                        android:textSize="13dp"
                        android:orientation="horizontal"
                        android:layout_below="@id/ll_horario_viernes"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_sabado"
                            android:textSize="13dp"
                            android:text="Sábado"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"/>

                        <TextView
                            android:id="@+id/tv_sabado_horario"
                            android:textSize="13dp"
                            android:layout_toRightOf="@+id/tv_lunes"
                            android:text="Cerrado"
                            android:gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_horario_domingo"
                        android:textSize="13dp"
                        android:orientation="horizontal"
                        android:layout_below="@id/ll_horario_sabado"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_domingo"
                            android:textSize="13dp"
                            android:text="Domingo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"/>

                        <TextView
                            android:id="@+id/tv_domingo_horario"
                            android:textSize="13dp"
                            android:layout_toRightOf="@+id/tv_lunes"
                            android:text="Cerrado"
                            android:gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"/>

                    </LinearLayout>

                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

                <RelativeLayout
                    android:id="@+id/desplegar_informacion"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/expandableLayout"
                    android:layout_width="@dimen/club_detalle_mas_informacion"
                    android:layout_height="25dp">

                    <TextView
                        android:id="@+id/tv_desplegar_informacion"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="VER INFORMACIÓN"
                        android:textSize="@dimen/font_size"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iv_desplegar_informacion"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_desplegar_informacion"
                        android:src="@drawable/flechita"
                        android:layout_width="5dp"
                        android:layout_height="5dp" />
                </RelativeLayout>

            </RelativeLayout>


            <View
                android:id="@+id/line1"
                android:layout_marginTop="5dp"
                android:background="@android:color/black"
                android:layout_below="@id/detalles_club"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>


            <RelativeLayout
                android:id="@+id/actividades_incluidas"
                android:layout_marginTop="10dp"
                android:layout_below="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/actividades_incluidas_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/ralewaysemibold"
                    android:text="ACTIVIDADES INCLUIDAS"
                    android:textSize="14dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_horarios"
                    android:layout_below="@id/actividades_incluidas_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

            <View
                android:id="@+id/line2"
                android:layout_marginTop="10dp"
                android:background="@android:color/black"
                android:layout_below="@id/actividades_incluidas"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <RelativeLayout
                android:id="@+id/servicios_adicionales"
                android:layout_marginTop="10dp"
                android:layout_below="@id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/servicios_adicionales_title"
                    android:text="SERVICIOS ADICIONALES"
                    android:textSize="14dp"
                    android:fontFamily="@font/ralewaysemibold"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_servicios"
                    android:layout_below="@+id/servicios_adicionales_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/botones"
                android:orientation="horizontal"
                android:layout_below="@id/servicios_adicionales"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <Button
                    android:id="@+id/plan_diario"
                    android:background="@drawable/circle_button"
                    android:text="PLAN DIARIO"
                    android:fontFamily="@font/ralewaymedium"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size"
                    android:layout_below="@id/line3"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/buttons_height"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/plan_mensual"
                    android:background="@drawable/circle_button"
                    android:text="PLAN MENSUAL"
                    android:fontFamily="@font/ralewaymedium"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size"
                    android:layout_below="@id/line3"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/buttons_height"
                    android:layout_weight="1"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_dias_gratis"
                android:visibility="invisible"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/botones"
                android:background="@drawable/circle_button"
                android:text="DÍAS DE PRUEBA"
                android:fontFamily="@font/ralewaymedium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size"
                android:layout_marginLeft="5dp"
                android:layout_width="180dp"
                android:layout_height="@dimen/buttons_height" />

            <TextView
                android:id="@+id/redes_sociales"
                android:text="REDES SOCIALES"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/ralewaymedium"
                android:textSize="@dimen/font_size"
                android:layout_below="@+id/btn_dias_gratis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/redes_sociales"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_facebook"
                    android:src="@drawable/icono_facebook"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/iv_twitter"
