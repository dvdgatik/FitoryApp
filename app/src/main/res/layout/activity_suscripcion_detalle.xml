<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Menu">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar_h">

        <ImageView
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_boton_regresar" />

        <ImageView
            android:src="@drawable/logo_fitory_bco"
            android:layout_centerInParent="true"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/marginLeft"
        android:layout_below="@+id/toolbar"
        android:background="@color/gris"
        android:layout_width="30dp"
        android:layout_height="match_parent">
    </View>
    <ScrollView
        android:overScrollMode="never"
        android:layout_toRightOf="@+id/marginLeft"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/app_toolbar_h"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:paddingTop="20dp">

        <TextView
            android:id="@+id/suscripcion_titulo"
            android:text="SUSCRIPCIÓN"
            android:textSize="20sp"
            android:fontFamily="@font/ralewaybold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/plan_mensual"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/suscripcion_titulo"
            android:text="SUSCRIPCIÓN MENSUAL"
            android:textSize="11sp"
            android:fontFamily="@font/ralewaysemibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/plan_mensual_texto"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
            android:textColor="@color/grisSusc"
            android:textSize="10sp"
            android:textAlignment="center"
            android:layout_below="@+id/plan_mensual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


            <RelativeLayout
                android:id="@+id/usuario"
                android:layout_below="@+id/plan_mensual_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:id="@+id/nombre"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/nombre_lbl"
                        android:text="Nombre:"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_nombre"
                        android:text="Mariana García"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/club"
                    android:layout_below="@+id/nombre"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/club_nombre_lbl"
                        android:text="Club:"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_nombreclub"
                        android:text="TRX CENTRO"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/inicio"
                    android:layout_below="@+id/club"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/inicio_lbl"
                        android:text="Inicio:"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_inicio"
                        android:text="dd/mm/aa"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/duracion"
                    android:layout_below="@+id/inicio"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/duracion_lbl"
                        android:text="Duración:"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_duracion"
                        android:text="1 mes"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/informacion_club"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/usuario"
                android:paddingLeft="50dp"
                android:paddingRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/informacion_club_titulo"
                    android:text="INFORMACIÓN CLUB"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/ralewaysemibold"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/direccion"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/informacion_club_titulo"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/direccion_lbl"
                        android:text="Dirección:"
                        android:textSize="10sp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_direccion"
                        android:text="Miguel Hidalgo #512 Zona Centro Monterrey, N.L."
                        android:textSize="10sp"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/telefono"
                    android:layout_marginTop="5dp"

                    android:layout_below="@+id/direccion"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/telefono_lbl"
                        android:text="Teléfono:"
                        android:textSize="10sp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_telefono"
                        android:text="01 (812) 132 2896"
                        android:textSize="10sp"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/correo"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/telefono"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/correo_lbl"
                        android:text="Correo:"
                        android:textSize="10sp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_correo"
                        android:text="atencionalcliente@trx.com"
                        android:textSize="10sp"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/horario"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/correo"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/horario_lbl"
                        android:text="Horario:"
                        android:textSize="10sp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_horario"
                        android:text="Lunes a Viernes de 8am-10pm Sábados de 10am-5pm"
                        android:textSize="10sp"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>



            </RelativeLayout>

            <TextView
                android:id="@+id/como_llegar"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/informacion_club"
                android:text="@string/como_llegar"
                android:textSize="8sp"
                android:fontFamily="@font/ralewaysemibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_renovar_suscripcion"
                android:background="@drawable/circle_button"
                android:fontFamily="@font/ralewaymedium"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:text="RENOVAR SUSCRIPCIÓN"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/como_llegar"
                android:layout_width="150dp"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/btn_cancelar_suscripcion"
                android:background="@drawable/circle_button"
                android:fontFamily="@font/ralewaymedium"
                android:textSize="10sp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white"
                android:text="CANCELAR SUSCRIPCIÓN"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_renovar_suscripcion"
                android:layout_width="150dp"
                android:layout_height="30dp" />

        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar_h"
        android:layout_alignParentBottom="true"
        android:theme="@style/BottomNavigationTheme"
        app:itemBackground="@android:color/black"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/bottom_menu" />
</RelativeLayout>