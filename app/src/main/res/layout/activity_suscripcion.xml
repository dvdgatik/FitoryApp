<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Suscripcion">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar_h">

        <ImageView
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_boton_regresar" />

        <ImageView
            android:src="@drawable/logo_fitory_bco"
            android:layout_centerInParent="true"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/marginLeft"
        android:layout_below="@+id/toolbar"
        android:background="@color/gris"
        android:layout_width="30dp"
        android:layout_height="match_parent">
    </View>
    <ScrollView
        android:overScrollMode="never"
        android:layout_toRightOf="@+id/marginLeft"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/app_toolbar_h"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/suscripcion_titulo"
                android:text="SUSCRIPCIÓN"
                android:textSize="20sp"
                android:fontFamily="@font/ralewaybold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/plan_mensual"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/suscripcion_titulo"
                android:text="PLAN MENSUAL"
                android:textSize="11sp"
                android:fontFamily="@font/ralewaysemibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/plan_mensual_texto"
                android:text="@string/suscripcion_mensual"
                android:textSize="10sp"
                android:textColor="@color/grisSusc"
                android:textAlignment="center"
                android:layout_below="@+id/plan_mensual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/line1"
                android:layout_marginTop="20dp"
                android:background="@android:color/black"
                android:layout_below="@id/plan_mensual_texto"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:id="@+id/precio"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/line1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="PRECIO MES:"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/ralewaysemibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="$509.00 MXN"
                    android:fontFamily="@font/ralewaymedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_marginTop="5dp"
                android:background="@android:color/black"
                android:layout_below="@id/precio"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <TextView
                android:id="@+id/seleccionar_tarjeta"
                android:layout_below="@+id/line2"
                android:layout_marginTop="20dp"
                android:text="Seleccionar tarjeta"
                android:fontFamily="@font/ralewaysemibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/tarjeta_spinner"
                android:layout_below="@+id/seleccionar_tarjeta"
                android:background="@drawable/edittext_border_gray"
                android:layout_width="match_parent"
                android:layout_height="25dp">

            <Spinner
                android:backgroundTint="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>
            </RelativeLayout>

            <Button
                android:id="@+id/pagar_button"
                android:background="@drawable/circle_button"
                android:fontFamily="@font/ralewaymedium"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="PAGAR"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tarjeta_spinner"
                android:layout_width="150dp"
                android:layout_height="30dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/pagar_button"
                android:id="@+id/pago_automatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Switch
                    android:theme="@style/AquaTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_toRightOf="@id/pago_automatico"
                    android:text="Pago automático"
                    android:fontFamily="@font/ralewaymedium"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/pagar_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <TextView
                android:id="@+id/agregar_tarjeta_title"
                android:text="AGREGAR TARJETA"
                android:fontFamily="@font/ralewaysemibold"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/pagar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/agregar_tarjeta_componentes"
                android:layout_below="@id/agregar_tarjeta_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0px"
                    android:layout_height="0px"/>

                <RelativeLayout
                    android:id="@+id/numero_tarjeta"
                    android:background="@drawable/edittext_border_gray"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                <EditText
                    android:theme="@style/BlackTheme"
                    android:hint="Número de Tarjeta"
                    android:textSize="10sp"
                    android:inputType="text"
                    android:fontFamily="@font/ralewaymedium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/vencimiento"
                    android:layout_below="@id/numero_tarjeta"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/vencimiento_month"
                        android:theme="@style/BlackTheme"
                        android:hint="Vencimiento (MM)"
                        android:fontFamily="@font/ralewaymedium"
                        android:textSize="10sp"
                        android:inputType="text"
                        android:layout_below="@+id/numero_tarjeta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/vencimiento_year"
                        android:theme="@style/BlackTheme"
                        android:hint="Vencimiento (AA)"
                        android:fontFamily="@font/ralewaymedium"
                        android:textSize="10sp"
                        android:inputType="text"
                        android:layout_below="@id/numero_tarjeta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>

                <EditText
                    android:hint="Código de Seguridad"
                    android:theme="@style/BlackTheme"
                    android:fontFamily="@font/ralewaymedium"
                    android:textSize="10sp"
                    android:inputType="text"
                    android:layout_below="@id/vencimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <Button
                android:onClick="detallesusc"
                android:id="@+id/agregar_button"
                android:background="@drawable/circle_button"
                android:fontFamily="@font/ralewaymedium"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="AGREGAR"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/agregar_tarjeta_componentes"
                android:layout_width="150dp"
                android:layout_height="30dp" />

        </RelativeLayout>

        <!--<LinearLayout-->
        <!--android:orientation="vertical"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <!--<ImageView-->
        <!--android:id="@+id/imageView"-->
        <!--android:background="@color/aqua"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:src="@drawable/logo_grafico"-->
        <!--android:layout_width="120dp"-->
        <!--android:layout_height="120dp" />-->

        <!--</LinearLayout>-->

    </ScrollView>

</RelativeLayout>