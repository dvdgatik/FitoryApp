<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/club"
    android:paddingTop="@dimen/item_club_pd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_imagen_sucursal"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_below="@+id/iv_imagen_sucursal"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/club_direccion"
        android:id="@+id/club_nombre"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_nombre_club"
            android:fontFamily="@font/ralewaybold"
            android:text=""
            android:textSize="@dimen/item_club_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <!--<LinearLayout-->
        <!--android:orientation="vertical"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1">-->
        <!--<RatingBar-->
        <!--android:id="@+id/rb_calificacion"-->
        <!--android:layout_gravity="right"-->
        <!--style="?android:ratingBarStyleSmall"-->
        <!--android:theme="@style/RatingStar"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:id="@+id/rb_club_calificacion"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/star1"
                android:layout_toRightOf="@+id/rb_calificacion"
                android:src="@drawable/star_off"
                android:layout_width="@dimen/club_stars_w"
                android:layout_height="@dimen/club_stars_w" />

            <ImageView
                android:id="@+id/star2"
                android:layout_toRightOf="@+id/rb_calificacion"
                android:src="@drawable/star_off"
                android:layout_width="@dimen/club_stars_w"
                android:layout_height="@dimen/club_stars_w" />

            <ImageView
                android:id="@+id/star3"
                android:layout_toRightOf="@+id/rb_calificacion"
                android:src="@drawable/star_off"
                android:layout_width="@dimen/club_stars_w"
                android:layout_height="@dimen/club_stars_w" />

            <ImageView
                android:id="@+id/star4"
                android:layout_toRightOf="@+id/rb_calificacion"
                android:src="@drawable/star_off"
                android:layout_width="@dimen/club_stars_w"
                android:layout_height="@dimen/club_stars_w" />

            <ImageView
                android:id="@+id/star5"
                android:layout_toRightOf="@+id/rb_calificacion"
                android:src="@drawable/star_off"
                android:layout_width="@dimen/club_stars_w"
                android:layout_height="@dimen/club_stars_w" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_sucursal_direccion"
        android:layout_below="@id/club_nombre"
        android:fontFamily="@font/ralewaymedium"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tv_distancia"
        android:textSize="@dimen/item_club_subtitle_ts"
        android:layout_marginTop="10dp"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/tv_distancia"
        android:visibility="gone"
        android:text="10KM"
        android:layout_marginTop="10dp"
        android:layout_below="@id/club_nombre"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/section"
        android:layout_below="@id/tv_sucursal_direccion"
        android:layout_marginTop="@dimen/item_club_section_mt"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

</RelativeLayout>

