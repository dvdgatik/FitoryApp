<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_suscripcion_nombre"
        android:text="TRX CENTRO"
        android:textSize="@dimen/item_club_title"
        android:fontFamily="@font/ralewaysemibold"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/tv_suscripcion_como_llegar"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_suscripcion_como_llegar"
        android:text="@string/como_llegar"
        android:fontFamily="@font/ralewaysemibold"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_suscripcion_horario"
        android:text="Vigencia 00/00/0000"
        android:textSize="@dimen/item_club_subtitle_ts"
        android:textColor="@color/grisSusc"
        android:textAlignment="center"
        android:layout_below="@+id/tv_suscripcion_nombre"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_suscripcion_telefono"
        android:text="Teléfono: 01 (812) 132 28 96"
        android:fontFamily="@font/ralewaybold"
        android:textSize="@dimen/item_club_subtitle_ts"
        android:layout_below="@id/tv_suscripcion_horario"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_suscripcion_tipo"
        android:text="MENSUAL"
        android:fontFamily="@font/ralewaysemibold"
        android:paddingLeft="20dp"
        android:layout_below="@id/tv_suscripcion_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_suscripcion_sesiones"
        android:text="Vigencia"
        android:textColor="@color/grisSusc"
        android:textSize="@dimen/item_club_subtitle_ts"
        android:layout_below="@id/tv_suscripcion_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_suscripcion_precio"
        android:text="$132.00 MXN"
        android:textColor="@color/grisSusc"
        android:textSize="@dimen/item_club_subtitle_ts"
        android:layout_below="@+id/tv_suscripcion_telefono"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_suscripcion_sesiones_restantes"
        android:text="YYYY-MM-DD"
        android:textColor="@color/grisSusc"
        android:paddingRight="20dp"
        android:layout_below="@+id/tv_suscripcion_precio"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_ultimo_checkin_title"
        android:visibility="gone"
        android:layout_below="@id/tv_suscripcion_sesiones_restantes"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:text="Último check-in: "
        android:textColor="@color/verde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_ultimo_checkin"
        android:visibility="gone"
        android:layout_below="@id/tv_ultimo_checkin_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="Último check-in: "
        android:textColor="@color/verde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_suscripcion_ver"
        android:text="Ver detalle"
        android:textColor="@android:color/white"
        android:textSize="@dimen/item_suscripcion_mensual_ts"
        android:layout_below="@+id/tv_ultimo_checkin"
        android:background="@drawable/circle_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_width="@dimen/item_suscripcion_mensual_w"
        android:layout_height="@dimen/item_suscripcion_mensual_h" />

    <Button
        android:id="@+id/btn_asistencia_manual"
        android:text="Asistencia"
        android:textColor="@android:color/white"
        android:textSize="@dimen/item_suscripcion_mensual_ts"
        android:layout_below="@+id/btn_suscripcion_ver"
        android:background="@drawable/circle_button"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/item_suscripcion_mensual_w"
        android:layout_height="@dimen/item_suscripcion_mensual_h" />

    <View
        android:id="@+id/section"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn_asistencia_manual"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp"></View>

</RelativeLayout>