<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SeleccionRegistrar">

    <ImageView
        android:id="@+id/iv_registro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY" />
    <ImageView
        android:onClick="atras"
        android:src="@drawable/flecha_regresar"
        android:layout_marginTop="@dimen/login_flecha_mt"
        android:layout_width="@dimen/login_flecha_ancho"
        android:layout_height="@dimen/login_flecha_alto"
        android:padding="@dimen/fab_margin"/>

    <ImageView
        android:layout_above="@id/btn_facebook"
        android:src="@drawable/logo_fitory_bco"
        android:layout_width="@dimen/seleccion_registrar_logo_w"
        android:layout_height="@dimen/seleccion_registrar_logo_h"
        android:layout_centerHorizontal="true"/>

    <com.facebook.login.widget.LoginButton
        android:visibility="gone"
        android:id="@+id/login_button"
        android:layout_marginTop="@dimen/login_google_btn_mt"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_width="220dp"
        android:layout_height="@dimen/buttons_height" />

    <ImageView
        android:id="@+id/btn_facebook"
        android:onClick="iniciarSesionFb"
        android:layout_above="@+id/btn_google"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_width="@dimen/boton_registro_fb_w"
        android:layout_height="@dimen/boton_registro_fb_h"
        android:layout_marginTop="@dimen/boton_registro_fb_mt"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/btn_google"
        android:layout_above="@id/btn_correo"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_width="@dimen/boton_registro_fb_w"
        android:layout_height="@dimen/boton_registro_fb_h"
        android:layout_marginTop="@dimen/seleccion_boton_registro_mt"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/btn_correo"
        android:onClick="signup"
        android:layout_above="@id/terminos1"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_width="@dimen/boton_registro_fb_w"
        android:layout_height="@dimen/boton_registro_fb_h"
        android:layout_marginTop="@dimen/seleccion_boton_registro_mt"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/terminos1"
        android:layout_above="@+id/terminos2"
        android:text="@string/terminos_pt1"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/seleccion_terminos_mt"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:onClick="terminos"
        android:id="@+id/terminos2"
        android:text="@string/terminos_pt2"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/seleccion_terminos_mb"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>